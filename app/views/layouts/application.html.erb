<!DOCTYPE html>
<html>
<head>
  <title>Bell Labs CMS</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<% if controller_name == "management" %>
      <%= render partial: 'home/nav_bar' %>
<% else %>

  <% if !current_user %>
      <%= render partial: 'home/nav_bar' %>
  <% else %>
    <%= render partial: 'home/app_nav_bar' %>
  <% end %>

<% end %>

<%= yield %>

</body>
</html>
