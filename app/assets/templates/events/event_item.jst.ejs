<div class="event-form-ctr event-item-ctr">
  <form>
    <div class="event-text-ctr">
      <input
      class="header-input"
      type="text"
      name="header"
      value="<%= header %>">

      <input
      class="subheader-input"
      type="text"
      name="subheader"
      value="<%= subheader %>">
    </div>

    <div class="event-date-ctr event-datetime-ctr">
      <div class="event-calendar-ctr">
        <div>
          <span class="event-calendar glyphicon glyphicon-calendar"></span>
        </div>
        <div>
          <span class="event-start-date-info"><%= eventStartInfo %></span>
        </div>
      </div>
      <div id="event-time-ctr" class="event-time-info-ctr">
        <input
          class="start-time-input"
          type="time"
          name="event-start-time"
          value="<%= eventStartTime %>">
        <input
          class="end-time-input"
          type="time"
          name="event-end-time"
          value="<%= eventEndTime %>">
      </div>
    </div>

    <div class="event-countdown-ctr">
      <!-- Split button -->
      <div class="btn-group">
        <button type="button" class="btn countdown-button-left">
          <span class="glyphicon glyphicon-time"></span>
        </button>
        <button type="button" class="btn countdown-button-right dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="countdown-text"><%= countdown_hours + ' hrs'%></span>
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li data-value="1"><a href="#">1 hrs</a></li>
          <li data-value="2"><a href="#">2 hrs</a></li>
          <li data-value="3"><a href="#">3 hrs</a></li>
          <li data-value="6"><a href="#">6 hrs</a></li>
          <li data-value="12"><a href="#">12 hrs</a></li>
          <li data-value="24"><a href="#">24 hrs</a></li>
        </ul>
      </div>
    </div>

    <div class="visible-event-ctr">
        <% if (visible) { %>
        <span
          class="eye-icon glyphicon glyphicon-eye-open"
          aria-hidden="true">
        </span>
        <% } else { %>
        <span
          class="eye-icon glyphicon glyphicon-eye-close"
          aria-hidden="true">
        </span>
        <% } %>
    </div>

    <div class="cancel-event-ctr">
      <span class="glyphicon glyphicon-trash delete-event-btn"></span>
    </div>

  </form>
</div>
