<div class="">
  <form class="form-inline">
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="name"
        value="<%= name %>">
    </div>

    <div class="form-group">
      <!-- <span>Start time</span> -->
      <input
        class="form-control"
        type="datetime-local"
        name="start_time_ms"
        value="<%= startISO %>">
    </div>

    <div class="form-group">
      <!-- <span>End time</span> -->
      <input
        class="form-control"
        type="datetime-local"
        name="end_time_ms"
        value="<%= endISO %>">
    </div>

    <div class="form-group">
      <!-- <span>Countdown Timer</span> -->
      <input
        class="form-control"
        type="number"
        name="countdown_hours"
        value="<%= countdown_hours %>">
    </div>

    <div class="form-group">
      <button class="form-control delete-event-btn">Delete</button>
    </div>
  </form>
</div>
