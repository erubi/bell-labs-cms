<div class="row">
  <div class="col-xs-12">
    <button id="add-new-event-btn" class="add-new-event-btn">
      Add New Event
    </button>
  </div>
</div>

<div id="new-event-form-ctr" class="new-event-form-ctr no-display">
  <form>

    <div class="event-text-ctr">
      <input
        class="header-input"
        type="text"
        maxlength="20"
        placeholder="Headline 20 characters"
        name="header">

      <input
        class="subheader-input"
        type="text"
        maxlength="100"
        placeholder="Subheadline 100 characters"
        name="subheader">
      </div>

      <div class="event-date-ctr">
        <div id="new-event-calendar">
        </div>
        <div id="event-time-ctr" class="event-time-ctr">
          <div class="new-event-start-date-info-ctr">
            <div class="new-event-start-date-info-header">
              Event Date:
            </div>
            <div class="new-event-start-date-info"></div>
          </div>
          <input id="end-time-input" type="time" name="event-end-time">
          <input id="start-time-input" type="time" name="event-start-time">
        </div>
      </div>

    <div class="event-countdown-ctr">
      <!-- Split button -->
      <div class="btn-group">
        <button type="button" class="btn countdown-button-left">
          <span class="glyphicon glyphicon-time"></span>
        </button>
        <button type="button" class="btn countdown-button-right dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span id="countdown-text">1 hr</span>
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li data-value="1"><a href="#">1 hr</a></li>
          <li data-value="2"><a href="#">2 hrs</a></li>
          <li data-value="3"><a href="#">3 hrs</a></li>
          <li data-value="6"><a href="#">6 hrs</a></li>
          <li data-value="12"><a href="#">12 hrs</a></li>
          <li data-value="24"><a href="#">24 hrs</a></li>
        </ul>
      </div>
    </div>

    <div class="save-event-ctr">
      <span class="glyphicon glyphicon-ok" id="save-new-event"></span>
    </div>

    <div class="cancel-event-ctr">
      <span class="glyphicon glyphicon-trash" id="cancel-new-event"></span>
    </div>
  </form>
</div>
