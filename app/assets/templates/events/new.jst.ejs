<div class="row">
  <div class="col-xs-12">
    <h4 class="sub-section-header">Add New Event</h4>
  </div>
</div>

<div class="new-event-form-ctr">
  <form class="form-inline">
    <div class="form-group event-text-ctr">
      <input
        class="form-control"
        type="text"
        placeholder="HEADLINE: 20 characters"
        name="header">

      <input
        class="form-control"
        type="text"
        placeholder="SUB HEAD: 100 characters"
        name="subheader">

        <input
        class="form-control"
        type="text"
        placeholder="EVENT TEXT"
        name="event_text">
      </div>

      <div class="form-group event-date-ctr">
        <!-- <span>Start time</span> -->
        <div>
          <label for="start-time-input">Start Time</label>
          <input
          id="start-time-input"
          class="form-control"
          type="datetime-local"
          name="start_time_ms">
        </div>

        <!-- <span>End time</span> -->
        <div>
          <label for="end-time-input">End Time</label>
          <input
          id="end-time-input"
          class="form-control"
          type="datetime-local"
          name="end_time_ms">
        </div>

        <!-- <span>End time</span> -->
        <div>
          <label for="event-time-input">Event Time</label>
          <input
          id="event-time-input"
          class="form-control"
          type="datetime-local"
          name="event_time_ms">
        </div>
      </div>

    <div class="form-group">
      <!-- <span>Countdown Timer</span> -->
        <input
          class="form-control"
          type="number"
          name="countdown_hours">
    </div>

    <div class="form-group">
      <button class="form-control" id="save-new-event">Save</button>
    </div>
  </form>
</div>
